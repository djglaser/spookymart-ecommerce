{
  "family": "spookymart-order-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::172859830594:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::172859830594:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "order-service",
      "image": "172859830594.dkr.ecr.us-west-2.amazonaws.com/spookymart-order-service:latest",
      "portMappings": [
        {
          "name": "order-port",
          "containerPort": 3002,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3002"
        },
        {
          "name": "PRODUCT_SERVICE_URL",
          "value": "http://product-service.spookymart:3001"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/spookymart-order-service",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import httpx; import sys; response = httpx.get('http://localhost:3002/health', timeout=2.0); sys.exit(0 if response.status_code == 200 else 1)\" || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
